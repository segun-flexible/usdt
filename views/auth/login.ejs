<html class="">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    <meta content="<%= websiteDetails.website_description %>" name="description">
    <meta content="<%= websiteDetails.website_author %>" name="author">
    <title>
        <%=title%>
    </title>
    <link rel="canonical" href="<%=longUrl%>">

    <link rel="icon" href="<%= websiteDetails.website_favicon %>" type="image/png"><!-- Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700"><!-- Icons -->
    <link rel="stylesheet" href="/css/user/nuclear.css" type="text/css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
        type="text/css">
    <!-- Page plugins -->

    <link rel="stylesheet" href="/css/user/auth.css" type="text/css">
    <!-- Nucleo icons -->

<style>
    .showme{
        display: block !important;
    }
</style>

</head>

<body>
    
    <div class="main-content">
        <!-- Header -->
        <div class="header bg-gradient-primary py-7 py-lg-8 pt-lg-9">
            <div class="container">
                <div class="header-body text-center mb-7">
                    <div class="row justify-content-center">
                        <div class="col-xl-5 col-lg-6 col-md-8 px-5">
                            <h1 class="text-white">Welcome Guest!</h1>
                            
                        </div>
                    </div>
                </div>
            </div>
            <div class="separator separator-bottom separator-skew zindex-100"><svg x="0" y="0" viewBox="0 0 2560 100"
                    preserveAspectRatio="none" version="1.1" xmlns="http://www.w3.org/2000/svg">
                    <polygon class="fill-white" points="2560 0 2560 100 0 100"></polygon>
                </svg></div>
        </div><!-- Page content -->
        <div class="container mt--9 pb-5 text-gray">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-7">
                    <div class="card bg-secondary border border-soft mb-0">
                        
                        <div class="card-body px-lg-5 py-lg-5">
                            <center><img style="width: 100px;" src="<%= websiteDetails.website_logo%>" /></center>
                            <div class="text-center mb-4"><small>sign in with your credentials</small></div>
                            <form id="step1">
                                <div class="form-group mb-3">
                                    <div class="input-group input-group-merge input-group-alternative">
                                        <div class="input-group-prepend"><span class="input-group-text"><i
                                                    class="ni ni-email-83"></i></span></div><input class="form-control"
                                            placeholder="Username / E-mail Address" type="text" id="credentials">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group input-group-merge input-group-alternative">
                                        <div class="input-group-prepend"><span class="input-group-text"><i
                                                    class="ni ni-lock-circle-open"></i></span></div><input
                                            class="form-control" placeholder="Password" type="password" id="password">
                                    </div>
                                </div>
                                <div class="custom-control custom-control-alternative custom-checkbox"><input
                                        class="custom-control-input" id=" customCheckLogin" type="checkbox"> <label
                                        class="custom-control-label" for=" customCheckLogin"><span>Remember
                                            me</span></label></div>
                                <div class="text-center"><button type="submit" class="btn btn-primary my-4">Sign
                                        in</button></div>
                            </form>


                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-6"><a href="/forgot-password" class="text-gray"><small>Forgot password?</small></a></div>
                        <div class="col-6 text-right"><a href="/register" class="text-gray"><small>Create new
                                    account</small></a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<script src="/js/auth/login.js"></script>
<script src="/js/partials/fetcher.js"></script>
<script src="/js/partials/sweetalert.js"></script>

</body>
</html>